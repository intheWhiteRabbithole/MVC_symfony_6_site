{% extends './base.html.twig' %}
{% block title %}Mes Articles{% endblock %}
{% block stylesheets %}
{#    {{ parent() }}#}
    {{ encore_entry_link_tags('article') }}
{% endblock %}
{% block body %}
   <div class="flex">
       {% for article in articles %}
       <div class="card">
           <div class="card-body">
               <h5 class="card-title">{{ article.title }}</h5>
               <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
               <img src="http://placehold.jp/150x150.png" alt="#">
               <p class="card-text"> {{ article.content | slice(0, 250)  }} ...</p>
               <a href="{{path('article_show', {article: article.id})}}" class="card-link">Card link</a>
               <a href="#" class="card-link">Another link</a>
           </div>
       </div>
       {% endfor %}
   </div>
{% endblock %}