{% extends './base.html.twig' %}
{% block title %}Mon article{% endblock %}
{% block body %}
    <div class="flex">
        <div class="card">
            <div class="card-body">
                <h4>{{ article.id}}</h4>
                <h5 class="card-title">{{ article.title | raw }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                <img src="http://placehold.jp/150x150.png" alt="#">
                <p class="card-text"> {{ article.content | slice(0, 250)  }} ...</p>
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
            </div>
        </div>
    </div>
{% endblock %}